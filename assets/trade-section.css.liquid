.TricksOfTradeContainer {
    padding-top: 3%;
    padding-bottom: 3%;
}

.TricksOfTradeTitleContainer {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-bottom: 2%;
    white-space: nowrap;
}

.TricksOfTradeContainer p {
    text-align: center;
    width: 270px;
    margin: auto;
}

.TradeButtonsContainer {
    display: flex;
    justify-content: space-evenly;
    width: 425px;
    margin: auto;
    margin-top: 2%;
}

.TradeButton {
    padding: 0.5% 5%;
    align-items: center;
    display: flex;
    background: #FF8200 !important;
    border: 2px solid #FF8200 !important;
    color: white !important;
    height: 40px;
}

.TricksOfTradeTitleContainer img {
    width: 15px;
    height: auto;
}

.TricksOfTradeTitleContainer h4 {
    color: #16467e;
    font-weight: bold;
    margin: 0;
    font-size: 30px;
}

.TradeButton:hover {
    color: #1B365D !important;
    cursor: pointer;
    text-decoration: none !important;
}

@media screen and (max-width: 992px) {
    .TradeButton {
        margin: auto;
        margin-top: 10px;
        justify-content: center;
    }

    .TradeButtonsContainer {
        display: block;
        width: 270px;
    }
}