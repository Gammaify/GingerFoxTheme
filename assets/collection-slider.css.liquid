.ExploreMoreMainContainer {
    position: relative;
}
.ExploreMoreTitleContainer {
    position: absolute;
    top: 10%;
    left: 50%;
    transform: translate(-50%, 0px);
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-bottom: 5%;
    white-space: nowrap;
}
.ExploreMoreContainer {
    width: 100%;
    background: url('{{ "EXPLOREMORE_DESKTOP.svg" | asset_url }}');
    background-repeat: no-repeat;
    padding-top: 8%;
    padding-bottom: 5%;
    background-size: cover;
    display: block;
}
