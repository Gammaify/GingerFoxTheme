.blogTitle {
    display: flex;
    justify-content: center;
    min-width: 300px;
    padding-top: 15px;
    padding-bottom: 15px;
}

.blogTitle img {
    width: 30px;
    height: 30px;
}

.articleFeaturedImage {
    display: block;
    width: 40%;
    margin: auto;
}

.articleFeaturedContainer {
    padding-bottom: 20px;
    border-bottom: 2px solid #ff8200;
    margin-bottom: 20px;
}

.readMoreBtn {
    display: flex;
    justify-content: end;
}

.articleContainer {
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
}

.article {
    padding: 30px;
    width: 33.33%;
}

@media screen and (max-width: 468px) {
    .articleFeaturedContainer h4 {
        text-align: center;
    }

    .articleFeaturedImage {
        width: 100%;
    }

    .readMoreBtn {
        justify-content: center;
    }
}

@media screen and (max-width: 992px) {
    .article {
        width: 100%;
    }
}