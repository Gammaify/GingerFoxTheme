.swiper-button-prev,
.swiper-rtl .swiper-button-next,
.swiper-button-next.swiper-button-disabled,
.swiper-button-prev.swiper-button-disabled {
    z-index: 5000;
    pointer-events: unset;

}

.swiper-button-next:after,
.swiper-button-prev:after {
    display: none;
}

.swiper-button-next {
    background-image: url("{{ 'BlueRightArrow.svg' | asset_url }}");
    background-repeat: no-repeat;
    background-size: 100% auto;
    background-position: center;
}

.swiper-button-prev {
    background-image: url("{{ 'BlueLeftArrow.svg' | asset_url }}");
    background-repeat: no-repeat;
    background-size: 100% auto;
    background-position: center;
}


.price {
    display: flex;
}

.Product {
    width: 100%;
}

.Product a img {
    display: block;
    width: 85% !important;
    margin: auto;
}

.ProductImageContainer {
    position: relative;
    z-index: -1;
}

.discountLabel {
    padding-top: unset !important;
    position: absolute;
    font-size: 13px;
    top: 0;
    line-height: 11px;
    display: flex;
    flex-wrap: wrap;
    font-weight: bold;
    text-transform: uppercase;
    width: 50px;
    text-align: center;
    align-items: center;
    height: 50px;
    color: #FFEA55;
    background: #21355A;
    border-radius: 116px;
    left: 5px;
    top: 5px;
}

.Product a {
    text-decoration: none;
}

.productName {
    color: black;
    font-weight: bold;
    font-size: 13px;
    height: 60px;
    line-height: 1.5em;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 0px 20px;
    display: -webkit-box;
    max-width: 200px;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    padding-top: 5px;
    margin: auto;
    margin-bottom: 15px;
    text-decoration: none;
}

.PricingContainer {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    position: relative;
    margin-bottom: 10px;
}

.productPrice {
    display: flex;
    align-items: center;
    justify-content: center;
    color: black;
    margin-bottom: 5%;
    font-weight: bold;
}

.discount {
    color: red !important;
    padding-right: 5px;
}

.discountCrossedOut {
    text-decoration: line-through;
    font-size: 12px !important;
}

.AddToCart {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: auto;
    width: fit-content;
    color: white;
    visibility: hidden;
    white-space: nowrap;
    font-size: clamp(12px, 2vw, 14px);
    background: #1B365D;
    border: 2px solid #1B365D;
    height: 40px;
    padding-left: 30px;
    padding-right: 30px;
    border-radius: 50px !important;
}

.Product:hover .AddToCart {
    visibility: visible;
    transition: 0.5s;
}

.title {
    margin-top: 0px !important;
    padding-top: 30px;
    color: #16467e !important;
    text-transform: capitalize;
    font-weight: bold;
    font-size: 22px;
    text-align: center;
}

@media screen and (max-width: 992px) {
    .AddToCart {
        visibility: visible;
    }
}