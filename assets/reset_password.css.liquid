.resetPasswordTitleContainer h1{
    font-size: clamp(20px, 4vw, 50px);
    text-transform: uppercase;
    font-weight: bold;
}
.resetPasswordTitleContainer{
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-bottom: 5%;
}
.resetPasswordTitleContainer img{
    width: clamp(20px, 3vw, 30px);
    margin-right: 5px;
    margin-left: 5px;
}

#reset_customer_password label{
    width: 100%;
    text-align: center;
    margin-top: 20px;
    color: black;
}

#reset_customer_password{
    max-width: 992px;
    margin: auto;
}
.resetBtn{
    margin: auto;
    margin-top: 15px;
}
.loading{
    display:none;
    width:50px;
    height: 50px;
    margin: auto;
}
@media screen and (max-width: 992px){
    .resetPasswordTitleContainer{
        padding-bottom: unset;
    }
}