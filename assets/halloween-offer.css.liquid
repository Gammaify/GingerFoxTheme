.buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: auto;
    width: fit-content;
    color: #fff;
    white-space: nowrap;
    font-size: clamp(12px, 2vw, 14px);
    background: #1B365D;
    border: 2px solid #1B365D;
    height: 40px;
    padding-left: 30px;
    padding-right: 30px;
    border-radius: 50px !important;
}

.buttons:hover {
    background: #1B365D;
    color: #ff8200;
}