
.upsellProductContainer {
    width: 100%;
    background: linear-gradient( 10deg, var(--YMALBottomColor) 50%, var(--YMALTopColor) 50%);
    min-height: 450px;
    overflow: hidden;
    padding: 20px 20px 50px;
}

.upsellProductTitle {
    width: 90% !important;
    max-width: 500px;
    margin: auto;
    padding-bottom: 3vh;
    padding-top: 3vh;
    display: flex;
    justify-content: center;
    align-items: flex-start;
}

.upsellProductTitle img {
    width: 25px;
    padding: 0px 5px;
}
.upsellProductTitle h4 {
    margin: 0;
    font-size: 25px;
    white-space: nowrap;
    color: white;
}

.Product{
    background: white;
}