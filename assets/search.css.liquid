.searchHeader {
    position: relative;
}
.searchHeader img{
    width: 100%
}

.searchHeaderTxtContainer {
    position: absolute;
    top: 50%;
    left: 50%;
    text-align: center;
    transform: translate(-50%, -50%);
}

.searchHeader .SearchFor {
    font-size: clamp(12px, 2vw, 25px);
    color: white;
    padding: 0 !important;
    margin: 0 !important;
    line-height: 1.5;
    white-space: nowrap;
}

.searchHeader h1 {
    color: white;
    font-weight: bold;
    padding: 0 !important;
    margin: 0 !important;
    line-height: 1.5;
    font-size: clamp(15px, 2vw, 40px);
    white-space: nowrap;
}

.searchHeader .ResultCount {
    font-size: clamp(12px, 2vw, 25px);
    color: white;
    padding: 0 !important;
    margin: 0 !important;
    line-height: 1.5;
}

.title {
    position: relative;
    display: flex;
    padding: 5% 0 5% 0;
}

.line {
    width: 100%;
    height: 2px;
    background-color: #fedabe;
    position: absolute;
    top: 50%;
    display: block;
    z-index: 0;
}

.GamesContainer h1, .VideosContainer h1, .BlogsContainer h1 {
    color: black;
    background-color: white;
    width: 136px;
    text-align: center;
    display: block;
    margin: auto;
    z-index: 50;
    font-size: 21px;
    font-weight: bold;
    text-transform: uppercase;
}

.resultsContainer{
    display: flex;
    text-align: center;
    flex-wrap: wrap;
    margin-bottom: 5%;
}