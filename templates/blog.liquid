<link rel="stylesheet" href="{{ 'blog.css' | asset_url }}">
<div class="container">
  <div class="blogTitle">
    <img src="{{ 'BlueLinesLeft.svg' | asset_url }}">
    <h1>{{ blog.title }}</h1>
    <img src="{{ 'BlueLinesRight.svg' | asset_url }}">
  </div>
  {% comment %}
    <img class="w-100 mb-4 desktopVersion" src="{{ 'HOMEPAGE-QUOTE-UPDATE-WEB-2023.jpg' | asset_url }}">
    <img class="w-100 mb-4 mobileVersion" src="{{ 'HOMEPAGE-QUOTE-UPDATE-MOB-2023.jpg' | asset_url }}">
  {% endcomment %}
  <div class="articleFeaturedContainer">
    {% for article in blog.articles %}
      {% if article.metafields.custom.featured_blog == true %}
        <h4>{{ article.title }}</h4>
        <img class="articleFeaturedImage" src="{{ article.image.src | image_url }}">
        <p>{{ article.excerpt }}</p>
        <div class="readMoreBtn">
          <a class="GingerFoxButtonBlue" href="{{ article.url }}">Read More</a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="articleContainer">
    {% for article in blog.articles %}
      {% if article.metafields.custom.featured_blog != true %}
        <div class="article">
          <h4>{{ article.title }}</h4>
          {% comment %}
            {% if article.image.src != nothing %}
              <img class="articleFeaturedImage" src="{{ article.image.src | image_url }}">
            {% endif %}
          {% endcomment %}
          <p>{{ article.excerpt }}</p>
          <div class="readMoreBtn">
            <a class="GingerFoxButtonBlue" href="{{ article.url }}">Read More</a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
