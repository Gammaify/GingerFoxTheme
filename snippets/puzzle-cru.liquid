{{ 'puzzle-cru.css' | asset_url | stylesheet_tag }}
{{ 'puzzle-cru.js' | asset_url | script_tag }}
<div class="PuzzleCruTopBanner">
  <h1 class="d-none">Puzzle Cru</h1>
  <img
    class="PuzzleTopDesktopBanner lazyload"
    data-src="https://media.gingerfox.co.uk/GingerFoxHub/ProductPages/PuzzleCru/PUZZLECRU_DESKTOP_HEADER.png"
  >
  <img
    class="PuzzleTopMobileBanner lazyload"
    data-src="https://media.gingerfox.co.uk/GingerFoxHub/ProductPages/PuzzleCru/PUZZLECRU_Mobile_HEADER.png"
  >
  <div class="PCHeaderTxtContainer">
    <p>A range of entertaining yet informative jigsaw maps crafted by Master of Wine <nobr>Rebecca Gibb.</nobr></p>
    <p>
      Wine and whisky lovers will enjoy exploring their favourite wine regions or whisky distilleries as they piece
      <nobr>together these beautiful puzzles.</nobr>
    </p>
  </div>
</div>

{% assign puzzleProducts = collections.puzzles.products | sort: 'price' | reverse %}
{% for product in puzzleProducts %}
