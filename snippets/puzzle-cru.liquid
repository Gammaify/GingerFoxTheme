    {% when 8777814343966 %}
      {% assign puzzleFrance = product %}

      <div class="PuzzleContainer BlueBackground">
        <div class="PuzzleIconContainer BlueGradientBackground">
          <div class="IconContainer">
            <img
              class="PuzzleIcon1"
              src="https://media.gingerfox.co.uk/GingerFoxHub/ProductPages/PuzzleCru/PUZZLECRU_BLUEPUZZLE.svg"
            >
            <p class="BlueColor">{{ puzzleFrance.metafields.product.puzzle_pieces }}</p>
          </div>
        </div>

        <img
          class="PuzzleImage lazyload"
          data-src="https://media.gingerfox.co.uk/GingerFoxHub/ProductPages/PuzzleCru/PUZZLECRU_FRANCE.png"
        >
        <div class="PuzzleInfoContainer">
          <h2>{{ puzzleFrance.title }}</h2>
          <div class="priceReviewContainer">
            <div class="priceContainer">
              {% if puzzleFrance.compare_at_price > 0 %}
                <p class="price priceDiscount">{{ puzzleFrance.price | money }}</p>
                <p class="priceCrossedOut">{{ puzzleFrance.compare_at_price | money }}</p>
              {% else %}
                <p class="price">{{ puzzleFrance.price | money }}</p>
              {% endif %}
            </div>
          </div>
          <div class="AddToBasketContainer">
            {% if puzzleFrance.available == true %}
              <form method="post" action="/cart/add">
                <input type="hidden" name="id" value="{{ puzzleFrance.variants.first.id }}">
                <input type="number" id="quantity" name="quantity" value="1" min="1" class="d-none">
                <input type="submit" value="Add To Basket" class="AddToBasketBtn">
              </form>
            {% else %}
              <button disabled class="AddToBasketBtn disabled">Out of Stock</button>
            {% endif %}
          </div>
          <div class="DescriptionContainer">
            <h4>Description</h4>
            <div class="descriptionContent1" id="descriptionContent1">
              {{ puzzleFrance.description }}
            </div>

            <div id="DescriptionReadMoreBtn1" class="DescriptionReadMoreBtn">Read More</div>
            <div id="DescriptionHideBtn1" class="DescriptionHideBtn" style="display: none;">Hide</div>
          </div>

          <div class="deliveryInfoContainer">
            <div class="deliveryInfoTitleContainer">
              <h4>Delivery Info</h4>
              <div id="DeliveryInfoReadMoreBtn1" class="DeliveryInfoReadMoreBtn">Read More</div>
              <div id="DeliveryInfoHideBtn1" class="DeliveryInfoHideBtn">Hide</div>
            </div>
            <div id="deliveryInfoTxtContainer1" class="deliveryInfoTxtContainer">
              <p>
                We offer both Royal Mail 48-hour post, and Royal Mail 24-hour post. We may use other couriers during
                busier periods, but shipping costs will remain the same.
              </p>
              <ul>
                <li>Royal Mail 48 (2-3 business days) - FREE</li>
                <li>Royal Mail 24 (next business day) - £3.99</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
