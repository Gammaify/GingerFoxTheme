<div class="container pt-4">
  <h1 class="text-center">{{ page_title }}</h1>

  <div class="d-flex flex-wrap justify-content-evenly">
    <div class="productList">
      <p>Products</p>
      <ul>
        {% paginate collections.all.products by 1000 %}
          {% for product in collections.all.products %}
            <li>
              <a href="{{ product.url }}">{{ product.title }}</a>
            </li>
          {% endfor %}
        {% endpaginate %}
      </ul>
    </div>
    <div class="pageList">
      <p>Pages</p>
      <ul>
        {% for page in pages %}
          {% if page.metafields.custom.sitemap == true %}
            <li>
              <a href="{{ page.url }}">{{ page.title }}</a>
            </li>
          {% endif %}
        {% endfor %}
        {% for policy in shop.policies %}
          <li>
            <a href="{{policy.url}}">{{ policy.title }}</a>
          </li>
        {% endfor %}
        <li><a href="{{ routes.account_login_url }}">Login</a></li>
        <li><a href="{{ routes.account_register_url }}">Register</a></li>
        <li><a href="{{ routes.search_url }}">Search</a></li>
        <li><a href="{{ routes.root_url }}">Home</a></li>
        <li><a href="{{ routes.cart_url }}">Cart</a></li>
      </ul>
      <div class="collectionList">
        <p>Collections</p>
        <ul>
          {% for collection in collections %}
            {% if collection.metafields.custom.sitemap == true %}
              <li>
                <a href="{{ collection.url }}">{{ collection.title }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  <div class="d-flex"></div>
</div>
